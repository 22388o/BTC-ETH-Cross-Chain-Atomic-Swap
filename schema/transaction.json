{
  "$id": "https://dev.liquality.com/schema/transaction.json",
  "title": "Transaction",
  "description": "Blockchain transaction",
  "type": "object",
  "required": [ "blockHash", "blockNumber", "value", "confirmations" ],
  "properties": {
    "blockHash": {
      "type": "string",
      "title": "Block Hash",
      "pattern": "^0x([A-Fa-f0-9]{64})$"
    },
    "blockNumber": {
      "type": "number",
      "title": "Block Number",
      "minimum": 0
    },
    "value": {
      "type": "number",
      "title": "Value",
      "minimum": 0
    },
    "confirmations": {
      "type": "number",
      "title": "Confirmations",
      "minimum": 0
    },
    "_raw": {
      "type": "object",
      "properties": {
        "hash": {
          "type": "string",
          "title": "Hash",
          "pattern": "^0x([A-Fa-f0-9]{64})$"
        },
        "txId": {
          "type": "string",
          "title": "Transaction ID"
        },
        "blockTime": {
          "type": "number",
          "title": "Block Time",
          "minimum": 0
        },
        "generated": {
          "type": "boolean",
          "title": "Generated"
        },
        "walletConflicts": {
          "type": "array",
          "title": "Wallet Conflicts"
        },
        "time": {
          "type": "number",
          "title": "Time",
          "minimum": 0
        },
        "timeReceived": {
          "type": "number",
          "title": "Time Received",
          "minimum": 0
        },
        "bip125Replaceable": {
          "type": "boolean",
          "title": "Bip125 Replaceable"
        },
        "details": {
          "type": "object",
          "title": "Details",
          "properties": {
            "account": {
              "type": "string",
              "title": "Account"
            },
            "address": {
              "type": "string",
              "title": "Address"
            },
            "category": {
              "type": "string",
              "title": "Category"
            },
            "category": {
              "type": "string",
              "title": "Category"
            },
            "amount": {
              "type": "number",
              "title": "Amount",
              "minimum": 0
            },
            "vout": {
              "type": "number",
              "title": "Vout",
              "minimum": 0
            },
            "fee": {
              "type": "number",
              "title": "Fee",
              "minimum": 0
            },
            "abandoned": {
              "type": "boolean",
              "title": "Abandoned"
            }
          }
        },
        "status": {
          "type": "boolean",
          "title": "Status"
        },
        "nonce": {
          "type": "number",
          "title": "Nonce",
          "minimum": 0
        },
        "transactionIndex": {
          "type": "number",
          "title": "Transaction Index",
          "minimum": 0
        },
        "from": {
          "type": "string",
          "title": "From Address"
        },
        "to": {
          "type": "string",
          "title": "To Address"
        },
        "gas": {
          "type": "number",
          "title": "Gas",
          "minimum": 0
        },
        "gasPrice": {
          "type": "number",
          "title": "Gas Price",
          "minimum": 0
        },
        "input": {
          "type": "string",
          "title": "Data"
        },
        "decodedRawTransaction": {
          "type": "object",
          "properties": {
            "version": {
              "type": "number",
              "minimum": 0
            },
            "size": {
              "type": "number",
              "minimum": 0
            },
            "locktime": {
              "type": "number",
              "minimum": 0
            },
            "vin": {
              "type": "array"
            },
            "vout": {
              "type": "array"
            }
          }
        }
      }
    }
  }
}
